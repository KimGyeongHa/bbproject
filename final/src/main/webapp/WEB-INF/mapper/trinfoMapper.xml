<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bb.project.dao.TrinfoDAO">


	<insert id="insertOne" parameterType="trdto">
		INSERT INTO trinfo
		VALUES (TRINFO_BNO_SEQ.NEXTVAL,#{type},#{loc},#{trtitle},#{adrs},#{trdetail},#{hp},#{time},#{trimg},TRINFO_MNO_SEQ.NEXTVAL,0)
	</insert>

	<select id="selectOne" parameterType="int" resultType="trdto">
		SELECT bno,type,loc,trtitle,adrs,trdetail, hp, time, trimg, mno, hits
		FROM trinfo
		WHERE bno=#{bno}
	</select>

	<update id="updateOne" parameterType="trdto">
		UPDATE trinfo
		SET trtitle=#{title}, trdetail=#{trdetail}, hp=#{hp}
		WHERE bno=#{bno}
	</update>

	<delete id="deleteOne">
		DELETE trinfo
		WHERE bno=#{bno}
	</delete>

	<update id="updatehits" parameterType="trdto">
		UPDATE trinfo
		SET hits=#{hits}
		WHERE bno=#{bno}
	</update>



</mapper>